<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background3"
        tools:context=".view.SignUpFragment">


        <androidx.cardview.widget.CardView
            android:id="@+id/image_account_cardView_friend"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="150dp"
            android:scaleType="centerInside">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="150dp"
                android:layout_margin="4dp"
                android:src="@mipmap/ic_launcher">

                <ImageView
                    android:id="@+id/image_account_friend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_account_circle_24"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/chatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_dialog_email"
            app:layout_constraintTop_toTopOf="@id/image_account_cardView_friend"
            app:layout_constraintBottom_toBottomOf="@id/image_account_cardView_friend"
            app:layout_constraintStart_toEndOf="@id/image_account_cardView_friend"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/name_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#50ffffff"
            android:textColor="@color/black"
            android:textColorHint="#403737"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/image_account_cardView_friend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:drawableStartCompat="@drawable/baseline_person_outline_24" />




        <TextView
            android:id="@+id/age_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#50ffffff"
            android:textColor="@color/black"
            android:textColorHint="#403737"
            android:drawablePadding="20dp"
            android:inputType="none"
            android:focusableInTouchMode="false"
            app:layout_constraintTop_toBottomOf="@+id/name_friend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:drawableStartCompat="@drawable/android_age_24" />

        <TextView
            android:id="@+id/location_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#50ffffff"
            android:textColor="@color/black"
            android:textColorHint="#403737"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tag3_friend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:drawableStartCompat="@drawable/map_marker_svgrepo_com" />


        <TextView
            android:id="@+id/tag1_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#50ffffff"
            android:textColor="@color/black"
            android:textColorHint="#403737"
            android:drawableStart="@drawable/baseline_auto_awesome_24"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/age_friend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tag2_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#50ffffff"
            android:textColor="@color/black"
            android:textColorHint="#403737"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tag1_friend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:drawableStartCompat="@drawable/baseline_auto_awesome_24" />
        <TextView
            android:id="@+id/tag3_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="#50ffffff"
            android:textColor="@color/black"
            android:textColorHint="#403737"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tag2_friend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:drawableStartCompat="@drawable/baseline_auto_awesome_24" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>