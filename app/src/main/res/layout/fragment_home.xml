<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".view.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:text="@string/persone_nelle_vicinanze"
        android:fontFamily="cursive"
        />

    <Spinner
        android:id="@+id/spinner_splitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_home"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:spinnerMode="dialog"
        android:backgroundTint="@android:color/black"
        />

    <EditText
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Interessi"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_below="@id/text_home"
        android:layout_toStartOf="@+id/btn_search"
        android:layout_toEndOf="@+id/spinner_splitter"
        />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_home"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/cerca"
        android:textColor="@color/white"
        android:backgroundTint="@android:color/black"
        />

    <LinearLayout
        android:id="@+id/layout_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_view"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="end">


        <Button
            android:id="@+id/btn_tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginEnd="8dp"
            android:visibility="invisible">

        </Button>

        <Button
            android:id="@+id/btn_tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginEnd="8dp"
            android:visibility="invisible"
           >
        </Button>

        <Button
            android:id="@+id/btn_tag_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray"
            android:visibility="invisible">



        </Button>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_tags"
        android:padding="10dp"
        tools:listitem="@layout/post_item"
        />

</RelativeLayout>